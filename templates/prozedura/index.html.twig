{% extends 'base.html.twig' %}

{% block title %}Prozedurak{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">Prozedura</li>
    <li class="breadcrumb-item active">berria</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Prozedurak</h3>
                <div class="card-tools">
                    <a class="btn btn-outline-primary" href="{{ path('prozedura_new') }}">Prozedura berria</a>
                </div>
            </div>
            <div class="card-body">
                <table id="myDatatable" class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ "Prozedura_eus" | trans}}</th>
                <th>{{ "Prozedura_es" | trans}}</th>
                <th class="text-center">{{ "actions" | trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for prozedura in prozeduras %}
            <tr>
                <td>{{ prozedura.id }}</td>
                <td>{{ prozedura.prozeduraEus }}</td>
                <td>{{ prozedura.prozeduraEs }}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a class="btn btn-xs btn-primary" href="{{ path('prozedura_edit', {'id': prozedura.id}) }}"><i class="fas fa-edit"></i></a>
                        </li>
                        <li class="list-inline-item">
                            {{ include('prozedura/_delete_form.html.twig') }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            </div>
            <div class="card-footer"></div>

        </div>
    </div>
</div>
{% endblock %}

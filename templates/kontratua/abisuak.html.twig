{% extends 'base.html.twig' %}

{% block title %}Kontratuak{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">Kontratuak</li>
    <li class="breadcrumb-item active">Abisuak</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card card-gray collapsed-card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-search"></i>&nbsp;Bilatu</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    {% include '_finder.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <form action="{{ path('kontratua_mail') }}" method="post">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kontratuak</h3>
                        <div class="card-tools">
                            <a class="btn btn-outline-primary" href="{{ path('kontratua_index') }}">Itzuli</a>
                            <input type="submit" class="btn btn-outline-dark" value="Aukeratu eta jarraitu">
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-condensed">
                            <thead>
                                <th><input type="checkbox" id="chkAll"></th>
                                <th>Saila</th>
                                <th>Kontratua</th>
                                <th>Lote</th>
                                <th>Kontratista</th>
                                <th>Egoera</th>
                            </thead>
                            <tbody>
                                {% for k in kontratuak %}
                                    <tr>
                                        <td><input type="checkbox" class="chkSelect" name="aukera[]" value="{{ k.id }}"></td>
                                        <td>{{ k.kontratua.saila }}</td>
                                        <td>{{ k.kontratua }}</td>
                                        <td>{{ k.name }}</td>
                                        <td>{{ k.kontratista }}</td>
                                        <td>{{ k.kontratua.egoera }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-right">
                        <input type="submit" class="btn btn-outline-dark" value="Aukeratu eta jarraitu">
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
